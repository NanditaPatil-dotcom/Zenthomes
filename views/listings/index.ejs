<% layout("layouts/boilerplate") %>
<body>
  <style>
    #filters-container{
      width: 100%;
      overflow-x: auto;
      display: flex;
      justify-content: center;
    }
    #filters{
      display: flex;
      flex-wrap:nowrap ;
      white-space: nowrap;
      gap:2rem;
      padding: 2rem;
    }
    #filters::-webkit-scrollbar{
      display: none;
    }
    .filter{
      transform:scale(1.1);
      margin: 1.5rem;
      flex:0 0 auto;
      text-align: center;
      cursor: pointer;
      opacity: 0.7;
    }
    .filter:hover{
      opacity: 1;
    }

    .filter p{
      font-size: 1 rem;
    }

    .filter i{
      font-size: 1rem;
    }
  </style>
<div id="filters-container">
  <div id="filters">

     <a href="/listings?category=Trending" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-fire-flame-curved"></i></div>
      <p>Trending</p>
    </a>

    <a href="/listings?category=Rooms" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>

    <a href="/listings?category=Ionic cities" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Ionic Cities</p>
    </a>

    <a href="/listings?category=Beaches" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
    </a>
     
    <a href="/listings?category=Camping" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>

    <a href="/listings?category=Architecture" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-building-columns"></i></div>
      <p>Architecture</p>
    </a>

  </div>
</div>


<% if (category && category !== "") { %>
  <h4 class="text-center mb-4"><%= category %></h4>
<% } %>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let listing of allListings) { %>
      <a href="/listings/<%=listing._id%>" class="listing-link">
         <div class="card col listing-card">
  <img src="<%= listing.image.url %>" 
  class="card-img-top" 
  alt="listing_image" 
  style="height: 20rem;" 
  />
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
      <%= listing.title %><br />
      <%= listing.price.toLocaleString("en-IN")%>/night
    </p>
  </div>
</div>
      </a>
<% } %>
</div>
